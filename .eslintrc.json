{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.{js,jsx,ts,tsx}"],
      "rules": {
        "@next/next/no-img-element": "off"
      }
    },
    {
      "files": ["lib/gtag.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ],
  "ignorePatterns": [
    ".next/**",
    "out/**",
    "build/**",
    "node_modules/**",
    ".git/**",
    ".history/**",
    "coverage/**",
    "*.d.ts"
  ]
}
